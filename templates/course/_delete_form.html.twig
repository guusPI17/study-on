<form method="post" action="{{ path('course_delete', {'id': course.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить данный курс?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <br>
    <div class="container">
        <div class="row">
            <div class="col">
                <button class="btn btn-danger">Удалить</button>
            </div>
        </div>
    </div>
</form>
