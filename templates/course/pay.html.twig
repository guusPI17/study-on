{% extends 'base.html.twig' %}

{% block body %}

    <!-- Modal -->
    <div class="modal fade" id="modalCenter-{{ course.code }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Подтверждение о покупке</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% if 'buy' == infoPrices[course.code].type %}
                        Вы действительно хотите купить данный курс?
                    {% elseif 'rent' == infoPrices[course.code].type %}
                        Вы действительно хотите арендовать данный курс?
                    {% else %}
                        Вы действительно хотите добавить себе данный курс?
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <a class="btn btn-primary" role="button"
                       href="{{ path('course_pay', {'course_code': course.code}) }}">Подтвердить</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}