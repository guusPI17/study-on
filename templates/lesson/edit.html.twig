{% extends 'base.html.twig' %}

{% block title %}Редактирование/{{ lesson.name }}/{{ lesson.course.name }}/StudyOn{% endblock %}

{% block body %}
    <header>
        {% block header %}
            {{ parent() }}
        {% endblock %}
    </header>

    <h1 class="center-h1">{{ lesson.name }}</h1>

    <div class="container">
        <div class="row">
            <div class="col">
                Курс <a href="{{ path('course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a>
            </div>
        </div>
    </div>

    {{ include('lesson/_form.html.twig', {'button_label': 'Обновить'}) }}

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="line">
                </div>
                <a href="{{ path('lesson_show', {'id': lesson.id}) }}" class="btn btn-light" role="button">К уроку</a>
            </div>
        </div>
    </div>

{% endblock %}
