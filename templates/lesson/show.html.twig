{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }}/{{ lesson.course.name }}/StudyOn{% endblock %}

{% block body %}
    <header>
        {% block header %}
            {{ parent() }}
        {% endblock %}
    </header>

    <h1 class="center-h1">{{ lesson.name }}</h1>

    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col-8">
                Курс <a href="{{ path('course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a>
            </div>
            <div class="col"></div>
        </div>
        <br>
        <div class="row">
            <div class="col"></div>
            <div class="col-8">
                <a href="{{ path('lesson_edit', {'id': lesson.id}) }}" class="btn btn-light" role="button">Редактировать</a>

                {{ include('lesson/_delete_form.html.twig') }}
            </div>
            <div class="col"></div>
        </div>
        <br>
        <div class="row">
            <div class="col"></div>
            <div class="col-8 row border border-primary shadow p-3 mb-5 bg-white">
                {{ lesson.content }}
            </div>
            <div class="col"></div>
        </div>
        </div>
    </div>

    <footer>
        {% block footer %}
            {{ parent() }}
        {% endblock %}
    </footer>
{% endblock %}
