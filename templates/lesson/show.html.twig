{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }}/{{ lesson.course.name }}/StudyOn{% endblock %}

{% block body %}
    <header>
        {% block header %}
            {{ parent() }}
        {% endblock %}
    </header>

    <h1 class="center-h1">{{ lesson.name }}</h1>

    <div class="container">
        <div class="row">
            <div class="col">
                Курс <a class="link-course" href="{{ path('course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col">
                <a href="{{ path('lesson_edit', {'id': lesson.id}) }}" class="btn btn-light" role="button">Редактировать</a>
                {{ include('lesson/_delete_form.html.twig') }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col row border border-primary shadow p-3 mb-5 bg-white">
                <div class="lesson-content">
                    {{ lesson.content }}
                </div>
            </div>
        </div>
        </div>
    </div>

    <footer>
        {% block footer %}
            {{ parent() }}
        {% endblock %}
    </footer>
{% endblock %}
